{% extends 'base.html.twig' %}

{% block title %}Log In{% endblock %}

{% block body %}
    <div class=" w-3/12 mx-auto mt-20">
        <form class="flex flex-col items-center w-full" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="text-[40px] mb-20 font-bold text-[#ca8f53]">Log In</h1>

            <div class="flex flex-col w-full">
                <label class="text-[#ca8f53] font-bold text-[25px]" for="username">Email</label>
                <input class="w-full py-2 focus:outline-none border-b-2 border-gray-400 focus:border-[#ca8f53] text-[#6d6e6f] text-[18px]" type="email" value="{{ last_username }}" name="_username" id="username" autocomplete="email" required autofocus>
            </div>

            <div class="flex flex-col w-full mt-10">
                <label class="text-[#ca8f53] font-bold text-[25px]" for="password">Password</label>
                <input class="w-full py-2 focus:outline-none border-b-2 border-gray-400 focus:border-[#ca8f53] text-[#6d6e6f] text-[18px]" type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me">Remember me</label>
                </div>
            #}

            <div class="mt-8 flex justify-center">
                <p class=" font-semibold text-[#6d6e6f] text-[18px]">Don't have an account? <a class="text-[#ca8f53] font-bold text-[#ca8f53] cursor-pointer hover:opacity-80" href="{{ path('app_register') }}">Sign Up</a></p>
            </div>

            <div class="mt-10">
                <button class="text-[#202020] bg-[#ca8f53] py-2 px-4 rounded-md font-bold text-[18px] hover:opacity-80 cursor-pointer" type="submit">
                    Sign In
                </button>
            </div>
        </form>
    </div>
{% endblock %}
