{% extends 'admin/base.html.twig' %}

{% block title %}Festivals{% endblock %}

{% block main %}
    {% include 'admin/components/_nav_bar.html.twig' with {
        title: 'Festivals',
        add_path: 'app_admin_festival_new'} %}

    <table x-data="{...tables(), ...colors(), ...buttons()}" class="w-11/12 mt-12 mx-auto" :class="table" x-cloak>
        <thead>
            <tr :class="row">
                <th class="w-2/5" :class="headCell">Name</th>
                <th class="w-1/5" :class="headCell">Location</th>
                <th class="w-1/5" :class="headCell">Start Date</th>
                <th class="w-1/5" :class="headCell">End Date</th>
                <th class="w-1/5" :class="headCell">Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for festival in festivals %}
                <tr :class="row">
                    <td :class="bodyCell">
                        <a href="{{ path('app_admin_festival_show', { 'id': festival.id }) }}" class="hover:opacity-80">
                            {{ festival.name }}
                        </a>
                    </td>

                    <td :class="bodyCell">{{ festival.location }}</td>
                    <td :class="bodyCell">{{ festival.startDate|date('d-m-Y') }}</td>
                    <td :class="bodyCell">{{ festival.endDate|date('d-m-Y') }}</td>

                    <td class="text-center flex justify-between" :class="bodyCell">
                        <a href="{{ path('app_admin_festival_edit', { 'id': festival.id }) }}" class="text-[#d68839] hover:opacity-80">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                            </svg>
                        </a>

                        <button type="button" @click="$refs.confirmModal{{ festival.id }}.showModal()" class="text-[#d68839] hover:opacity-80 cursor-pointer">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                            </svg>
                        </button>

                        <dialog x-ref="confirmModal{{ festival.id }}" class="modal">
                            <div class="modal-box">
                                <h3 class="text-lg font-bold text-[25px]" :class="primaryColor">Warning</h3>
                                <p class="py-4 text-[20px]" :class="textColor">Are you sure you want to delete this festival ?</p>
                                <div class="modal-action">
                                    <button type="button" @click="$refs.confirmModal{{ festival.id }}.close()" :class="secondary">
                                        Close
                                    </button>

                                    <button type="button" @click="$refs.delete{{ festival.id }}.submit()" :class="primary">
                                        Confirm
                                    </button>
                                </div>
                            </div>
                        </dialog>

                        {% include 'admin/components/_delete_form.html.twig' with {'id': festival.id, 'delete_path': 'app_admin_festival_delete'} %}
                    </td>
                </tr>
            {% else %}
                <tr :class="row">
                    <td colspan="4" class="text-center" :class="bodyCell">No data</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
