{% extends 'admin/base.html.twig' %}

{% block title %}Tickets{% endblock %}

{% block main %}
    {% include 'admin/components/_nav_bar_new.html.twig'%}

    <div x-data="{...colors(), ...buttons()}" class="w-7/12 mx-auto mt-10">
        {{ form_start(form) }}

        <div>
            {{ form_label(form.name, null, {
                'label_attr': {
                    'class': 'text-[#ca8f53] text-[25px] font-bold'
                }})
            }}

            {{ form_widget(form.name, {
                'attr': {
                    'placeholder': 'Enter band name',
                    'class': 'placeholder:text-[#6d6e6f] w-full py-2 focus:outline-none border-b-2 border-gray-400 focus:border-[#ca8f53] text-[#6d6e6f] text-[18px]'
                }})
            }}

            <div class="text-red-600">
                {{ form_errors(form.name) }}
            </div>
        </div>

        <div class="mt-10">
            {{ form_label(form.description, null, {
                'label_attr': {
                    'class': 'text-[#ca8f53] text-[25px] font-bold mt-10'
                }})
            }}

            {{ form_widget(form.description, {
                'attr': {
                    'placeholder': 'Enter band description',
                    'class': 'placeholder:text-[#6d6e6f] mt-2 w-full h-30 p-2 focus:outline-none border-2 border-gray-400 focus:border-[#ca8f53] text-[#6d6e6f] text-[18px]'
                }})
            }}

            <div class="text-red-600">
                {{ form_errors(form.description) }}
            </div>
        </div>

        <div class="flex justify-between">
            <div class="flex flex-col">
                {{ form_label(form.startSaleDate, null, {
                    'label_attr': {
                        'class': 'text-[#ca8f53] text-[25px] font-bold mt-10'
                    }})
                }}

                {{ form_widget(form.startSaleDate, {
                    'attr': {
                        'class': 'mt-1 focus:outline-none border-b-2 border-gray-400 focus:border-[#ca8f53] text-[#6d6e6f] text-[18px]'
                    }})
                }}

                <div class="text-red-600">
                    {{ form_errors(form.startSaleDate) }}
                </div>
            </div>

            <div class="flex flex-col">
                {{ form_label(form.endSaleDate, null, {
                    'label_attr': {
                        'class': 'text-[#ca8f53] text-[25px] font-bold mt-10'
                    }})
                }}

                {{ form_widget(form.endSaleDate, {
                    'attr': {
                        'class': 'mt-1 focus:outline-none border-b-2 border-gray-400 focus:border-[#ca8f53] text-[#6d6e6f] text-[18px]'
                    }})
                }}

                <div class="text-red-600">
                    {{ form_errors(form.endSaleDate) }}
                </div>
            </div>
        </div>

        <div class="flex flex-col mt-3">
            {{ form_label(form.festival, null, {
                'label_attr': {
                    'class': 'text-[#ca8f53] text-[25px] font-bold mt-10'
                }})
            }}

            {{ form_widget(form.festival, {
                'placeholder': 'Select festival',
                'attr': {
                    'class': 'invalid:text-[#6d6e6f] py-2 focus:outline-none border-b-2 border-gray-400 focus:border-[#ca8f53] text-[#6d6e6f] text-[18px]'
                }})
            }}

            <div class="text-red-600">
                {{ form_errors(form.festival) }}
            </div>
        </div>

        <div class="flex justify-between gap-20 mt-10">
            <div>
                {{ form_label(form.totalTickets, null, {
                    'label_attr': {
                        'class': 'text-[#ca8f53] text-[25px] font-bold'
                    }})
                }}

                {{ form_widget(form.totalTickets, {
                    'attr': {
                        'placeholder': 'Enter total tickets',
                        'class': 'placeholder:text-[#6d6e6f] w-full py-2 focus:outline-none border-b-2 border-gray-400 focus:border-[#ca8f53] text-[#6d6e6f] text-[18px]'
                    }})
                }}

                <div class="text-red-600">
                    {{ form_errors(form.totalTickets) }}
                </div>
            </div>

            <div>
                {{ form_label(form.price, null, {
                    'label_attr': {
                        'class': 'text-[#ca8f53] text-[25px] font-bold'
                    }})
                }}

                {{ form_widget(form.price, {
                    'attr': {
                        'placeholder': 'Enter price',
                        'class': 'placeholder:text-[#6d6e6f] w-full py-2 focus:outline-none border-b-2 border-gray-400 focus:border-[#ca8f53] text-[#6d6e6f] text-[18px]'
                    }})
                }}

                <div class="text-red-600">
                    {{ form_errors(form.price) }}
                </div>
            </div>

            <div>
                {{ form_label(form.currency, null, {
                    'label_attr': {
                        'class': 'text-[#ca8f53] text-[25px] font-bold'
                    }})
                }}

                {{ form_widget(form.currency, {
                    'attr': {
                        'placeholder': 'Enter currency',
                        'class': 'placeholder:text-[#6d6e6f] w-full py-2 focus:outline-none border-b-2 border-gray-400 focus:border-[#ca8f53] text-[#6d6e6f] text-[18px]'
                    }})
                }}

                <div class="text-red-600">
                    {{ form_errors(form.currency) }}
                </div>
            </div>
        </div>

        <div class="flex justify-center mt-15 mb-10">
            <button type="submit" :class="primary">{{ buttonText }}</button>
        </div>

        <div class="hidden">
            {{ form_rest(form) }}
        </div>

        {{ form_end(form, {'render_rest': false}) }}
    </div>

{% endblock %}