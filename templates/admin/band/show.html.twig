{% extends 'admin/base.html.twig' %}

{% block title %}Festival{% endblock %}

{% block main %}
    {% include 'admin/components/_nav_bar_show.html.twig' with {
        'id': band.id,
        'title': 'Warning',
        'text': 'Are you sure you want to delete this band?',
        'delete_path': 'app_admin_band_delete',
        'edit_path': 'app_admin_band_edit'} %}

    <div x-data="colors" class="flex flex-col items-center mt-12 w-4/6 mx-auto mb-5">
        <div class="flex flex-col items-center justify-center mb-10">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="0.5" stroke="currentColor" class="size-50 text-[#ca8f53]">
                <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
            </svg>

            <h1 class="text-[30px] font-bold" :class="primaryColor">{{ band.name }}</h1>
            <p class="font-bold text-[20px] py-1" :class="textColor">{{ band.genre.value }}</p>
        </div>

        <p class="text-[17px] mt-2 text-center" :class="textColor">{{ band.description }}</p>

        <table x-data="tables" class="w-full mx-auto mt-10" :class="table" x-cloak>
            <thead>
            <tr class="border-b border-[#ca8f53]">
                <th colspan="3" class="text-center" :class="headCell">Schedule</th>
            </tr>
            </thead>

            <tbody>
            {% for festival in band.festivals %}
                <tr class="border-b border-[#ca8f53]">
                    <td class="w-1/5 text-center" :class="bodyCell">
                        <a href="{{ path('app_admin_festival_show', {'id': festival.festival.id}) }}" class="hover:opacity-80">
                            {{ festival.festival.name }}
                        </a>
                    </td>
                    <td class="w-1/5 text-center" :class="bodyCell">{{ festival.festival.location.city }}</td>
                    <td class="w-1/5 text-center" :class="bodyCell">{{ festival.startTime|date('d M Y, H:i') }} - {{ festival.endTime|date('H:i') }}</td>
                </tr>
            {% else %}
                <tr class="border-b border-[#ca8f53]">
                    <td colspan="3" class="text-center" :class="bodyCell">- No Data -</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}