{% extends 'public/base.html.twig' %}

{% block title %}Artists{% endblock %}

{% block content %}
    <div class="w-full max-w-lg mx-auto px-4 mt-15 mb-15 flex justify-center items-center gap-5">
        <form class="relative w-full" action="#" method="get">
            <input type="search" name="q" placeholder="Search for festivals or artists..."
                   class="w-full pl-5 pr-12 py-1 bg-transparent border-b-2 border-gray-400 text-gray-700 text-lg placeholder-gray-500 focus:outline-none focus:border-[#ca8f53] transition-colors duration-300">

            <button type="submit"  class="cursor-pointer absolute inset-y-0 right-0 flex items-center px-4 text-gray-500 hover:text-[#ca8f53] focus:text-[#ca8f53] focus:outline-none transition-colors">
                <svg fill="currentColor" class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                    <path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z"/>
                </svg>
            </button>
        </form>

        <button type="button" class="flex items-center gap-2 py-1 px-5 font-semibold text-gray-500 text-[18px] bg-gray-100 border border-gray-500 rounded-lg hover:border-[#ca8f53] cursor-pointer">
            Filter
        </button>
    </div>

    <div class="max-w-6xl mx-auto px-2 sm:px-6 lg:px-8 pb-10">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
            {% for band in bands %}
                {% include 'public/components/_band_card.html.twig' with {'band': band} %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
